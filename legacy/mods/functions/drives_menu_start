#!/bin/bash
############# https://github.com/plexguide/PlexGuide.com/graphs/contributors ###
drives_menu_start() {

drives_menu_start_setup
drives_share_active_count

common_main /pg/var/drives/storage.method READ-ONLY storage_method

# READ-ONLY MENU ###############################################################
if [[ "$storage_method" == "READ-ONLY" ]]; then
common_message "🚀  Drives - Mount Transport Data Interface" "💬  Visit ~ https://plexguide.com/wiki/drives/

[1] Google Drive        : [$gdtokeninfo]
[2] Share  Drive(s)     : [Active Tokens - $active_count of $sd_list_track]
[3] Storage Method      : [$storage_method]
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
[D] Deploy Drives       : [$deployed_mode]
[O] Options
[R] RClone Settings
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
[Z] Exit Interface
"
common_number

if [[ "$typed" -gt "$gmenu_number" ]]; then
common_message "⛔️  Typed a Selection that does not exist | [Press ENTER]"
common_confirm && drives_menu_start && exit; fi

case $typed in
    1 ) drives_gdrive_menu && exit ;;
    2 ) drives_share_menu && exit ;;
    3 ) drives_menu_storage_method && exit ;;
    d ) drives_deploy && exit ;;
    D ) drives_deploy && exit ;;
    z ) start_menu && exit ;;
    Z ) start_menu && exit ;;
    * ) drives_menu_start && exit ;;
esac

# BASIC MENU ###################################################################
elif [[ "$storage_method" == "BASIC" ]]; then

common_message "🚀  Drives - Mount Transport Data Interface" "💬  Visit ~ https://plexguide.com/wiki/drives/

[1] Google Drive        : [$gdtokeninfo]
[2] Share  Drive(s)     : [Active Tokens - $active_count of $sd_list_track]
[3] Storage Method      : [$storage_method]
[4] Upload Data To      : [$drive_upload]
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
[D] Deploy Drives       : [$deployed_mode]
[O] Options
[R] RClone Settings
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
[Z] Exit Interface
"
common_number

if [[ "$typed" -gt "$gmenu_number" ]]; then
common_message "⛔️  Typed a Selection that does not exist | [Press ENTER]"
common_confirm && drives_menu_start && exit; fi

case $typed in
    1 ) drives_gdrive_menu && exit ;;
    2 ) drives_share_menu && exit ;;
    3 ) drives_menu_storage_method && exit ;;
    4 ) drives_basic_upload && exit ;;
    d ) drives_deploy && exit ;;
    D ) drives_deploy && exit ;;
    z ) start_menu && exit ;;
    Z ) start_menu && exit ;;
    * ) drives_menu_start && exit ;;
esac

# BASIC MENU ###################################################################
elif [[ "$storage_method" == "BLITZ" ]]; then

common_fcreate_silent "/pg/var/keys/${drive_upload}"
common_main /pg/var/keys/${drive_upload}/key.count 0 menu_keycount

common_message "🚀  Drives - Mount Transport Data Interface" "💬  Visit ~ https://plexguide.com/wiki/drives/

[1] Google Drive        : [$gdtokeninfo]
[2] Share  Drive(s)     : [Active Tokens - $active_count of $sd_list_track]
[3] Storage Method      : [$storage_method]
[4] Upload Data To      : [$drive_upload]
[5] Keys Management     : [$menu_keycount]
[6] Share Generator
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
[D] Deploy Drives       : [$deployed_mode]
[O] Options
[R] RClone Settings
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
[Z] Exit Interface
"
common_number

if [[ "$typed" -gt "6" ]]; then
common_message "⛔️  Typed a Selection that does not exist | [Press ENTER]"
common_confirm && drives_menu_start && exit; fi

case $typed in
    1 ) drives_gdrive_menu && exit ;;
    2 ) drives_share_menu && exit ;;
    3 ) drives_menu_storage_method && exit ;;
    4 ) drives_blitz_upload && exit ;;
    5 ) drives_key_generation && exit ;;
    6 ) drives_key_email && exit ;;
    d ) drives_deploy && exit ;;
    D ) drives_deploy && exit ;;
    z ) start_menu && exit ;;
    Z ) start_menu && exit ;;
    * ) drives_menu_start && exit ;;
esac

fi
}
