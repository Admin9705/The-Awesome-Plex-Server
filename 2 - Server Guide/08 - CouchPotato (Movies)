### Note: Recommend to use Internet Explorer for Folder Selections to prevent selection cutoffs.
################# COUCHPOTATO INSTALL ################# START
sudo apt-get install python git -y
sudo mkdir /opt/couchpotato
cd /opt/couchpotato/
sudo git clone https://github.com/RuudBurger/CouchPotatoServer.git

# Setting permissions for CouchPotato
sudo chown root:root /opt/couchpotato/CouchPotatoServer/CouchPotato.py	
sudo chmod 755 /opt/couchpotato/CouchPotatoServer/CouchPotato.py	

# Creating a service for Sonnar
sudo nano /etc/systemd/system/couch.service

####### COPY ###### START
[Unit]
Description=CouchPotato Daemon
After=multi-user.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/opt/couchpotato/CouchPotatoServer/CouchPotato.py
TimeoutStopSec=20
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target
####### COPY ###### END
# Press CTRL+X to exit and save

# Start the Couch Service
sudo systemctl daemon-reload
sudo systemctl enable couch.service
sudo systemctl start couch.service
sudo systemctl status couch.service
# Press CTRL+C to exit status message
# To test, goto your http://ipv4address:8989
################# INSTALL COUCHPOTATO ################# END

################# COUCHPOTATO CONFIG ################# START
